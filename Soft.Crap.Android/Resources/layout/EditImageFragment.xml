<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/Soft.Crap.ImageBackground"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
  
   <ImageView android:adjustViewBounds="true"
              android:background="@color/Soft.Crap.ImageBackground"
              android:fillViewport="true"
              android:id="@+id/EditedImage"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:scaleType="centerInside"
              android:src="@drawable/CrapAppIcon" />
  
   <Button android:background="@drawable/AttributesButton"
           android:id="@+id/AttributesButton"
           android:layout_alignBottom="@id/EditedImage"
           android:layout_alignParentLeft="true"
           android:layout_height="60dp"
           android:layout_width="60dp" />
  
   <Button android:background="@drawable/RotateButton"
           android:id="@+id/RotateButton"
           android:layout_alignBottom="@id/EditedImage"
           android:layout_alignParentRight="true"
           android:layout_height="60dp"
           android:layout_width="60dp" />
    
</RelativeLayout>
