<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp">

   <FrameLayout android:background="@color/Soft.Crap.OuterFrame"
                android:id="@+id/OuterFrame"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:layout_width="wrap_content"
                android:padding="1dp">
    
      <include layout="@layout/ObjectThumbnailInclude" />

   </FrameLayout>      

   <TextView android:gravity="center"
             android:id="@+id/TypeDescription"             
             android:layout_height="14dp"
             android:layout_marginBottom="1dp"
             android:layout_marginLeft="4dp"
             android:layout_marginRight="0dp"
             android:layout_marginTop="0dp"             
             android:layout_toRightOf="@id/OuterFrame"
             android:layout_width="wrap_content"
             android:singleLine="true"
             android:textSize="12sp"
             android:textStyle="bold" />

   <TextView android:gravity="center"
             android:id="@+id/ObjectTime"             
             android:layout_height="14dp"
             android:layout_marginBottom="1dp"
             android:layout_marginLeft="0dp"
             android:layout_marginRight="0dp"
             android:layout_marginTop="0dp"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:singleLine="true"             
             android:textSize="12sp" />

   <TextView android:gravity="center"
             android:id="@+id/ObjectLocation"
             android:layout_below="@id/TypeDescription"
             android:layout_height="14dp"
             android:layout_marginBottom="1dp"
             android:layout_marginLeft="4dp"
             android:layout_marginRight="0dp"
             android:layout_marginTop="0dp"
             android:layout_toRightOf="@id/OuterFrame"
             android:layout_width="wrap_content"
             android:singleLine="true"
             android:text="London, Victoria Station"
             android:textSize="12sp" />

   <ImageView android:gravity="center"
              android:id="@+id/TypeThumbnail"
              android:layout_below="@id/ObjectLocation"
              android:layout_height="20dp"
              android:layout_marginBottom="0dp"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="0dp"
              android:layout_marginTop="0dp"
              android:layout_toRightOf="@id/OuterFrame"
              android:layout_width="20dp"
              android:scaleType="centerCrop"
              android:singleLine="true" />
  
   <TextView android:gravity="center"
             android:id="@+id/SourceDescription"
             android:layout_below="@id/ObjectLocation"
             android:layout_height="20dp"
             android:layout_marginBottom="0dp"
             android:layout_marginLeft="4dp"
             android:layout_marginTop="0dp"
             android:layout_toRightOf="@id/TypeThumbnail"
             android:layout_width="wrap_content"
             android:singleLine="true"
             android:textSize="16sp" />   

   <TextView android:gravity="center"
             android:id="@+id/ObjectDetails"
             android:text="holidays, Italy, Sicily, sun, water, ancient, happy"
             android:layout_below="@id/SourceDescription"
             android:layout_height="14dp"
             android:layout_marginBottom="0dp"
             android:layout_marginLeft="4dp"
             android:layout_marginRight="0dp"
             android:layout_marginTop="1dp"
             android:layout_toRightOf="@id/OuterFrame"
             android:layout_width="wrap_content"
             android:singleLine="true"
             android:textSize="12sp"             
             android:textStyle="bold" />   
  
   <TextView android:gravity="center"          
             android:id="@+id/ObjectDescription"
             android:layout_below="@id/ObjectDetails"
             android:layout_height="14dp"                          
             android:layout_marginBottom="0dp"
             android:layout_marginLeft="4dp"
             android:layout_marginRight="0dp"
             android:layout_marginTop="1dp"
             android:layout_toRightOf="@id/OuterFrame"
             android:layout_width="wrap_content"
             android:singleLine="true"             
             android:textSize="12sp" />  

</RelativeLayout>